<h1><%= @reward.title %></h1>

<p><%= image_tag @reward.image.url, height: '300' if @reward.image.exists? %></p>
<p><%= @reward.description %></p>
<p>Cost: <%= @reward.cost %> points</p>
<br>
<%= link_to "Edit", edit_admin_reward_path(@reward) %><br>
<%= link_to "Delete", admin_reward_path(@reward), data: {confirm: "Really delete #{@reward.title}?"}, method: 'delete' %>
